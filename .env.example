# ======================
# Frontend Environment Variables
# ======================
# Copy this file to packages/frontend/.env.local and fill in your values

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOi...
NEXT_PUBLIC_API_URL=http://localhost:4000

# Analytics (Optional - PostHog)
# Sign up at https://posthog.com and create a project
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Error Tracking (Optional - Sentry)
# Sign up at https://sentry.io and create a React project
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ======================
# Backend Environment Variables
# ======================
# Copy this file to packages/backend/.env and fill in your values

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOi...
OPENAI_API_KEY=sk-...
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Admin Access Control
# Comma-separated list of admin emails for safety dashboard access
ALLOWED_ADMIN_EMAILS=admin@example.com,safety@example.com

# Error Tracking (Optional - Sentry)
# Sign up at https://sentry.io and create a Node.js project
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Service (Resend)
# Sign up at https://resend.com and get your API key
# Used for account deletion confirmation emails
RESEND_API_KEY=re_...
# Optional: Custom from email (must be verified in Resend dashboard)
# Default: onboarding@resend.dev (for testing)
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Account Deletion - Require email confirmation (set to 'true' to enable)
# When false, users just need to type 'DELETE' to delete their account
# When true, users must also enter a confirmation code sent to their email
REQUIRE_EMAIL_CONFIRMATION=false
